<main>
  <p class="alert alert-info p-3 px-5 mb-3 rounded-lg bg-teal-600 shadow-lg font-medium text-white truncate" 
    role="alert"
    phx-click="lv:clear-flash"
    phx-value-key="info"><%= live_flash(@flash, :info) %></p>

  <p class="alert alert-danger p-3 px-5 mb-3 rounded-lg bg-red-600 shadow-lg font-medium text-white truncate" 
    role="alert"
    phx-click="lv:clear-flash"
    phx-value-key="error"><%= live_flash(@flash, :error) %></p>

  <%= @inner_content %>
</main>
